@section Scripts
{
    <script>
        //$(window).scroll(function (e) {
        //    if ($(document).scrollTop() > 50 && $(document).scrollTop() < $(window).height()) {
        //        ascrollto("item2");
        //        e.stopPropagation();
        //    }
        //});

        $('.fullvideo').click(function (e) {
            e.stopPropagation();
        });

        $(".fullvideo").click(function () {
            fullvideoCerrar();
        });

        $(document).keyup(function (event) {
            if (event.which == 27) {
                if ($(".fullvideo").hasClass("show") == true || $("#tooltip").hasClass("show") == true) {
                    fullvideoCerrar();
                    tooltipClose();
                }
            }
        });

        function bajar() {
            ascrollto("item2");
        }
        function fullvideo() {
            $(".videointerno").html("<iframe width='80%' height='40%' src='https://www.youtube.com/embed/AMOiukpgbX4' frameborder='0' allow='accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture' allowfullscreen></iframe>");
            $(".fullvideo").addClass('block').outerWidth();
            $(".fullvideo").addClass('show');
        }

        function fullvideoCerrar() {
            $(".fullvideo").removeClass('block').outerWidth();
            $(".fullvideo").removeClass('show');
            $(".videointerno").html("");
            
        }

        function ascrollto(id) {
            var etop = $('#' + id).offset().top;
            $('html, body').animate({
                scrollTop: etop
            }, 1000);
        }
    </script>
}